public class Solution {
    public static void getStarPattern(int n) {
        if (n == 1){
            System.out.print("*");
            return;
        }
        for (int i=0; i<n; i++){
            System.out.print("*");
        }
        System.out.println();

        for (int i=1; i<n-1; i++){
            for (int j=0; j<n; j++){
                if (j == 0 || j == n-1){
                    System.out.print("*");
                }
                else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
        System.out.println();

        for (int i=0; i<n; i++){
            System.out.print("*");
        }
        System.out.println();
    }
}
