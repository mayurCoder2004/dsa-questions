public class Solution {
    public static void nStarTriangle(int n) {
        for (int i=n; i>=1; i--){
            for (int j=n-1; j>=i; j--){
                System.out.print(" ");
            }
            for (int k=1; k<=2*i-1; k++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
