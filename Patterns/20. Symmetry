public class Solution {
    public static void symmetry(int n) {
        for (int i=1; i<=n; i++){
            for (int j=1; j<=i; j++){
                System.out.print("* ");
            }

            for (int s=i; s<=2*(n-1); s++){
                System.out.print(" ");
            }

            for (int k=1; k<=i; k++){
                System.out.print("* ");
            }
            System.out.println();
        }


        for (int i=n-1; i>=1; i--){
            for (int j=1; j<=i; j++){
                System.out.print("* ");
            }

            for (int s=i; s<=2*(n-1); s++){
                System.out.print(" ");
            }

            for (int k=1; k<=i; k++){
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
