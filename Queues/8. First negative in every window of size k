                                                          // APPROACH 1

class Solution {
    static List<Integer> firstNegInt(int arr[], int k) {
        // write code here
        int n = arr.length;
        ArrayList<Integer> ans = new ArrayList<>();
        Queue<Integer> q = new LinkedList<>();
        
        for (int i=0; i<n; i++) {
            if (arr[i] < 0) {
                q.add(i);
            }
        }
        
        for (int i=0; i<n-k+1; i++) {
            if (q.peek() < i) {
                q.remove();
            }
            else if (q.peek() <= i+k-1) {
                ans.add(arr[q.peek()]);
            }
            else {
                ans.add(0);
            }
        }
        return ans;
    }
}
