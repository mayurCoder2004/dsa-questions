                                                            // BRUTE FORCE APPROACH

class Solution {
    public int[] nextGreaterElements(int[] nums) {
        int n = nums.length;
        int [] nge = new int[n];

        for (int i=0; i<n; i++) {
            for (int j=i+1; j<=i+n-1; j++) {
                int idx = j % n;
                if (nums[idx] > nums[i]) {
                    nge[i] = nums[idx];
                    break; 
                }
            }
            if (nge[i] == 0) {
                nge[i] = -1;
            }
        }
        return nge;
    }
}


