import java.util.* ;
import java.io.*; 

public class Solution {
    public static int[] getFloorAndCeil(int[] arr, int n, int x) {
      // Wriute your code here.
      int st = 0, end = n-1;
      int floor = -1, ceil = -1;

      while (st <= end) {
        int mid = st + (end - st)/2;
        if (arr[mid] > x) {
          end = mid - 1;
        }
        else if (arr[mid] <= x) {
          st = mid + 1;
          floor = arr[mid];
        }
      }

      st = 0;
      end = n-1;

      while (st <= end) {
        int mid = st + (end - st) / 2;
        if (arr[mid] >= x) {
          end = mid - 1;
          ceil = arr[mid];
        }
        else if (arr[mid] < x) {
          st = mid + 1;
        }
      }

      return new int[]{floor, ceil};
    }
    
}
