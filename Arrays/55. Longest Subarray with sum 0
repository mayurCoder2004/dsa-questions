                                                              // BRUTE FORCE APPROACH

class Solution {
    int maxLength(int arr[]) {
        // code here
        int n = arr.length;
        int maxLen = 0;
        
        for (int i=0; i<n; i++) {
            for (int j=i; j<n; j++) {
                int sum = 0;
                for (int k=i; k<=j; k++) {
                    sum += arr[k];
                }
                if (sum == 0) {
                    maxLen = Math.max(maxLen, j-i+1); 
                }
            }
        }
        return maxLen;
    }
}


                                                              // BETTER APPROACH

class Solution {
    int maxLength(int arr[]) {
        // code here
        int n = arr.length;
        int maxLen = 0;
        
        for (int i=0; i<n; i++) {
            int sum = 0;
            for (int j=i; j<n; j++) {
                sum += arr[j];
                if (sum == 0) {
                    maxLen = Math.max(maxLen, j-i+1); 
                }
            }
        }
        return maxLen;
    }
}
