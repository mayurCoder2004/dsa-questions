class Solution {
    public int maxDepth(String s) {
        int n = s.length();

        Stack<Character> st = new Stack<>();

        int depth = 0;
        int maxDepth = 0;

        for (int i=0; i<n; i++) {
            char ch = s.charAt(i);
            if (ch == '(') {
                depth++;
                st.push(ch);
            }
            else if (ch == ')') {
                depth--;
                if (!st.isEmpty()) st.pop();
            }
            maxDepth = Math.max(maxDepth, depth);
        }
        return maxDepth;
    }
}
