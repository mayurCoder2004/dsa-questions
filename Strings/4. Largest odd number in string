                                                              // BRUTE FORCE APPROACH

class Solution {
    public String largestOddNumber(String num) {
        int n = num.length();
        int max = 0;

        for (int i=0; i<n; i++) {
            for (int j=i; j<n; j++) {
                String s = "";
                for (int k=i; k<=j; k++) {
                    s += num.charAt(k);
                }
                int sNum = Integer.parseInt(s);
                if (sNum % 2 == 1) {
                    max = Math.max(max, sNum);
                }
            }
        }

        if (max == 0) {
            return "";
        }
        return String.valueOf(max);
    }
}


                                                              // BETTER APPROACH

class Solution {
    public String largestOddNumber(String num) {
        int n = num.length();
        int max = 0;

        for (int i=0; i<n; i++) {
            String s = "";
            for (int j=i; j<n; j++) {
                s += num.charAt(j);

                int sNum = Integer.parseInt(s);
                if (sNum % 2 == 1) {
                    max = Math.max(max, sNum);
                }
            }
        }

        if (max == 0) {
            return "";
        }
        return String.valueOf(max);
    }
}
