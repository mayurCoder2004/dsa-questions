                                                        // BRUTE FORCE APPROACH

class Solution {
    public boolean isPalindrome(String s, int i, int j) {
        int n = s.length();
        while (i <= j) {
            if (s.charAt(i) != s.charAt(j)) {
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
    public String longestPalindrome(String s) {
        int n = s.length();
        int st = 0, end = 0;
        int max = 1;

        for (int i=0; i<n; i++) {
            for (int j=i; j<n; j++) {
                if (isPalindrome(s, i, j)) {
                    int size = j - i + 1;
                    if (size > max) {
                        st = i;
                        end = j;
                        max = size;
                    }
                }
            }
        }

        return s.substring(st, end+1);
    }
}                                                        
