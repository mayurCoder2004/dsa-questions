                                                        // APPROACH 1

public static int nthNode(Node head, int n){
    int size = 0;
    Node temp = head;

    while (temp != null){
        size++;
        temp = temp.next;
    }

    int m = size - n + 1;
    temp = head;
    for (int i=1; i<=m-1; i++){
        temp = temp.next;
    }
    return temp.data;
}





                                                        // APPROACH 2

public static int nthNode(Node head, int n){
    Node slow = head;
    Node fast = head;

    for (int i=1; i<=n; i++){
        fast = fast.next;
    }

    while (fast != null){
        slow = slow.next;
        fast = fast.next;
    }
    return slow.data;
}


                                                        // APPROACH 3

class Solution {
    public int size(ListNode head) {
        int size = 0;
        ListNode temp = head;

        while (temp != null) {
            size++;
            temp = temp.next;
        }
        return size;
    }
    public ListNode removeNthFromEnd(ListNode head, int n) {
        ListNode temp = head;
        int size = size(head);
        if (size == n) return head.next;
        int dist = size - n;
        int i = 1;

        while (i < dist) {
            temp = temp.next;
            i++;
        }
        temp.next = temp.next.next;
        return head;
    }
}
