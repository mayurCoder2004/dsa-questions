                                                                // BRUTE FORCE APPROACH

class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m = matrix.length;
        int n = matrix[0].length;

        for (int i=0; i<m; i++) {
            for (int j=0; j<n; j++) {
                if (matrix[i][j] == target) {
                    return true;
                }
            }
        }
        return false;
    }
}


                                                                // BINARY SEARCH APPROACH

class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int m = matrix.length, n = matrix[0].length;
        int st = 0, end = m*n-1;

        while (st <= end){
            int mid = st + (end - st)/2;
            int r = mid / n, c = mid % n;

            if (matrix[r][c] == target){
                return true;
            }
            else if (matrix[r][c] > target){
                end = mid - 1;
            }
            else {
                st = mid + 1;
            }
        }
        return false;
    }
}
