                                                                // BRUTE FORCE APPROACH

class Solution {
    public int numSubarraysWithSum(int[] nums, int goal) {
        int n = nums.length;
        int count = 0;

        for (int i=0; i<n; i++) {
            for (int j=i; j<n; j++) {
                int sum = 0;
                for (int k=i; k<=j; k++) {
                    sum += nums[k];
                }
                if (sum == goal) {
                    count++;
                }
            }
        }
        return count;
    }
}                                                                
